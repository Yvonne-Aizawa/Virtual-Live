{
  "compilerOptions": {
    "target": "es5",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "baseUrl": ".",
    "paths": {
        "@static/*": [ "static/*" ],
    },
    "types" : []
  },
  "include": [
    "static/Cubism/Core/*.ts",
    "src/renderer/**/*.ts",
  ],
  "exclude": [
    "node_modules",
    "dist",
  ]
}
